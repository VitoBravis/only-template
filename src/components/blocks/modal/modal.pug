mixin modal(props)
    .modal&attributes(attributes)
        .modal__content
            button.modal__button!= 'Закрыть'
            .swiper
                .swiper-wrapper
                    each slide in props
                        .swiper-slide
                            +img(slide.img).swiper_image
                            +counter
            .swiper-button-prev
            .swiper-button-next
